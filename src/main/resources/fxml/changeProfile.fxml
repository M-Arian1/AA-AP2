<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChangeProfileMenu">
   <children>
      <VBox layoutX="110.0" layoutY="49.0" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
         <children>
            <TextField fx:id="username" promptText="Username" />
            <TextField fx:id="password" promptText="Password" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <HBox layoutX="301.0" layoutY="104.0" prefHeight="25.0" prefWidth="281.0" spacing="10.0">
         <children>
            <TextField fx:id="newPassword" promptText="New Password" />
            <Button mnemonicParsing="false" onMouseClicked="#checkChangePassword" text="Change Password" />
         </children>
      </HBox>
      <HBox layoutX="301.0" layoutY="49.0" prefHeight="25.0" prefWidth="281.0" spacing="10.0">
         <children>
            <TextField fx:id="newUsername" promptText="New Username" />
            <Button mnemonicParsing="false" onMouseClicked="#checkChangeUsername" text="Change Username" />
         </children>
      </HBox>
      <HBox layoutX="301.0" layoutY="156.0" prefHeight="25.0" prefWidth="281.0" spacing="10.0">
         <children>
            <TextField fx:id="confirmDelete" promptText="TYPE &quot;CONFIRM&quot;" />
            <Button mnemonicParsing="false" onMouseClicked="#checkDeleteAccount" text="DELETE ACCOUNT" />
         </children>
      </HBox>
      <Button layoutX="58.0" layoutY="513.0" mnemonicParsing="false" onMouseClicked="#back" text="Back" />
      <Button layoutX="557.0" layoutY="498.0" mnemonicParsing="false" onMouseClicked="#checkChangeAvatar" text="Change Avatar" />
      <Button layoutX="52.0" layoutY="422.0" mnemonicParsing="false" onMouseClicked="#gotoLogin" text="Log out" />
   </children>
</AnchorPane>
